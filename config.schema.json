{
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "include_file_types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of file extensions to include"
        },
        "exclude_dirs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of directories to exclude"
        },
        "index_metadata_file": {
          "type": "string",
          "description": "Path to the index metadata file"
        },
        "vector_db_dir": {
          "type": "string",
          "description": "Path to the vector database directory"
        },
        "llm_model": {
          "type": "string",
          "description": "Name of the LLM model to use"
        },
        "embeddings_model": {
          "type": "string",
          "description": "Name of the embeddings model to use"
        },
        "chunk_size": {
          "type": "integer",
          "description": "Size of code chunks"
        },
        "chunk_overlap": {
          "type": "integer",
          "description": "Overlap between code chunks"
        }
      },
      "required": [
        "include_file_types",
        "exclude_dirs",
        "index_metadata_file",
        "vector_db_dir",
        "llm_model",
        "embeddings_model",
        "chunk_size",
        "chunk_overlap"
      ]
    },
    "dirs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to a directory to process"
          },
          "include_file_types": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Override list of file extensions to include for this directory (optional)"
          },
          "exclude_dirs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Override list of directories to exclude for this directory (optional)"
          }
        },
        "required": [
          "path"
        ]
      }
    }
  },
  "required": [
    "global",
    "dirs"
  ]
}